<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smp_activity_main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include
        layout="@layout/smp_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.NavigationView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <fragment
            android:name="com.giaquino.sample.ui.drawer.fragment.DrawerFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="com.giaquino.sample.ui.drawer.fragment.DrawerFragment"/>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>